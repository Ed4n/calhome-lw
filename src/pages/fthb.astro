---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";

import ImageBG from "../img/fthb/FTHB_MainBG.jpg";
import Buyer from "../components/fthb/Buyer.astro";
import PropertyGuidelines from "../components/fthb/PropertyGuidelines.astro";
import LoanTerms from "../components/fthb/LoanTerms.astro";
import bg1 from "../img/fthb/FTHB_BG1.jpg";

const buyerInfo = [
  "You must occupy the property as your primary place of residence.",
  "You must not have owned a residential unit or been on the title of a residential unit within the last three years.",
  "The purchase price may not exceed $650,000, subject to periodic adjustments.",
  "You must contribute three percent of the purchase price from your funds.",
  `The maximum CalHome loan amount will be 40 percent of the Borrower’s purchase price for the property, <b>or up to a maximum of $XXX.</b>`,
  "You must complete a CalHome Approved Homebuyer Education Class.",
  "The total gross annual income of the entire household must not exceed 80 percent of the Los Angeles County Area Median Income (AMI).",
];
const propertyGuidelines = [
  "The property must be within the City of Lynwood’s limits/boundaries.",
  "Occupancy Ratio: No more than 1.5 people per living space (including bedrooms, living room, family room, den/study).",
  "The property must be occupied by the seller/owner and must not have been vacated within the last 30 days.",
  "The property may be a new or resale single-family detached unit, condominium, townhouse, or manufactured home on a permanent foundation.",
  "You must obtain fire and casualty insurance, including flood insurance when applicable, covering the replacement value of property improvements.",
  "The property must be free from any health & safety hazards and/or lead poisoning exposures.",
  "Before final loan approval, a Housing Quality Standards (HQS) inspection will be conducted to verify the property’s condition. Proof of initial building permit issuance must be provided.",
];

const loanTerms = {
  list: [
    "Principal and interest payments shall be deferred for the term of the CalHome Program Loan.",
    "CalHome program Loans shall be secured by the property.",
    "Prohibited loans and terms:",
  ],
  loanTerms: [
    "Negative Amortization",
    " Stated Income",
    "Adjustable-Rate Mortgage (ARM)",
    "Interest-Only Loans",
    " The Front-End Ratio cannot be below 28 percent or over 40 percent.",
    "The Back-End Ratio cannot be over 48 percent.",
  ],
};
---

<Layout title="fthb">
  <main>
    <Nav />
    <header
      class="w-full h-[60vh] min-h-400px lg:h-[80vh] relative overflow-hidden"
    >
      <img class="w-full h-full object-cover" src={ImageBG.src} alt="" />
      <div
        class="w-full h-full bg-lw-blue/30 lg:bg-transparent absolute top-0 flex justify-center items-center lg:items-end flex-col gap-5 lg:gap-24 lg:pr-12"
      >
        <h1
          class="flex flex-col leading-11 text-white text-shadow text-5xl lg:text-7xl text-center lg:text-end"
        >
          <b>FIRST-TIME</b>HOME BUYER <br /> PROGRAM
        </h1>

        <h2 class="text-white text-3xl lg:text-5xl text-center">
          PROGRAM OVERVIEW <br /> EFFECTIVE 2024
        </h2>
      </div>
    </header>

    <Buyer info={buyerInfo} />
    <PropertyGuidelines info={propertyGuidelines} />

    <LoanTerms info={loanTerms} />
  </main>
</Layout>
