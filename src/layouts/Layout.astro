---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  body {
    font-size: 18px;
  }

  .flex-center {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .text-shadow {
    text-shadow: 3px 5px rgba(0, 0, 0, 0.425);
  }

  .triangle {
    clip-path: polygon(53% 55%, 0% 100%, 100% 100%);
    @apply w-[80px] h-[60px] md:w-[120px] md:h-[100px] absolute -top-14 md:-top-24;
  }
</style>
